<body>
    <%- include("../includes/header.ejs")  %>
    <main>
      <% if(products.length > 0) { %>
        <div class="row m-0 p-0 gap-3 mt-3 justify-content-center">
          <!-- <% for(product of products) { %>  -->
            <div class="card col-sm-12 col-md-3" style="width: 18rem;">
                <img src="<%= product.imgUrl %> " class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= product.title %> </h5>
                  <p class="card-text"><%= product.description %> </p>
                  <h5>$<%= product.price %> </h5>
                  <div class="d-flex justify-content-between">
                  <a href="/product-details/<%= product.id %> " class="btn btn-warning">Details</a>
                  <form action="/add-to-cart" method="post">
                    <input type="hidden" name="productID" value="<%= product.id %>">
                    <button class="btn btn-primary" type="submit">Add To Cart</button>
                  </form>
                </div>
                </div>
              </div>
            <!-- <% } %>  -->
        </div>
        <% }else{ %>
          <a class="text-warning">Add Products</a>
          <% } %> 
    </main>
